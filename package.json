{
  "name": "second-order-matching",
  "version": "1.0.0",
  "description": "An implementation of the Huet-Lang algorithm for second-order pattern matching.",
  "repository": "https://github.com/lurchmath/second-order-matching",
  "type": "module",
  "main": "built/matching.js",
  "types": "built/matching.d.ts",
  "files": [
    "built/**/*"
  ],
  "dependencies": {
    "openmath-js": "^1.2.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "jest": "^26.4.2",
    "jsdoc": "^3.6.6",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.0",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "test": "jest --config jestconfig.json --verbose",
    "docs": "jsdoc --readme src/docs-main.md src/*.js -d ./docs",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run format && npm run lint && npm run docs",
    "preversion": "npm test && npm run format && npm run lint"
  },
  "author": "George Tillisch and Nathan Carter",
  "license": "ISC"
}
